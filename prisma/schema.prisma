generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  username String @unique
  password String
  createdAt DateTime @default(now())
}

model DailyTask {
  id Int @id @default(autoincrement())
  username String
  title String
  desc String
  done Boolean @default(false)
  spendMs Int @default(0)
  createdAt DateTime @default(now())
}

model TimeStats {
  id String @id @default(uuid())
  username String @unique
  endTime String
  sumTimeHrs Int
  spendMsInTasks Int[]
}

model Note {
  id Int @id @default(autoincrement())
  username String
  title String
  desc String
  deadline String
  complete Boolean @default(false)
  createdAt DateTime @default(now())
}
