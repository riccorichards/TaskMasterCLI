generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  username String 
  password String
  createdAt DateTime @default(now())
}

model DailyTask {
  id String @id @default(uuid())
  title String @unique
  desc String
  done Boolean @default(false)
  spendMs Int @default(0)
  createdAt DateTime @default(now())
}

model TimeStats {
  id String @id @default(uuid())
  endTime String
  sumTimeHrs Int
  spendMsInTasks Int[]
}

model Note {
  id String @id @default(uuid())
  title String
  desc String
  deadline String
  complete Boolean @default(false)
  createdAt DateTime @default(now())
}

model Act {
  id Int @id @default(autoincrement())
  workSpace String
  task String
  status Boolean 
  createdAt DateTime @default(now())
}